{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["error", {"allow": ["log", "warn", "error"]}],
    "indent": ["error", 4],
    "max-len": ["error", 160],
    "no-trailing-spaces": "error",
    "no-unused-vars": ["error", {"args": "none"}],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}